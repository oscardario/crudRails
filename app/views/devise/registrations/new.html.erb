<h2 class="text-center">Registrarse</h2>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, 'Email' %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Tu Email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Pass' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",placeholder: "Tu password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation,'Confirma tu pass' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirma tu password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Registrarme", class: "btn btn-success" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
